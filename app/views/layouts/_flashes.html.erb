     <% if flash[:notice] %>
          <div class="row">
             <div class="col-sm-8">
               <div id="flash_success" class="alert alert-success">
                  <%= flash[:notice] %>
               </div>
            </div>
          </div>
     <% end %>

     <% if flash[:alert] %>
         <div class="row">
            <div class="col-sm-8">
               <div id="flash_success" class="alert alert-danger">
                  <%= flash[:alert] %>
               </div>
            </div>
         </div>
     <% end %>
